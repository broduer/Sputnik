#<?
Class PropFakeText extends Prop
{
	my $Value;
	my $Min;
	my $Max;
	my $CodeGen;
	Function __Construct($PropName, $PropMin, $PropMax, $PropValidation, $PropDefault, $PropParentType, $PropCodeGen)
	{
		parent::__Construct($PropName, PAT->$BeginEditRet, $PropValidation, $PropDefault, $PropParentType);
		$Min = $PropMin;
		$Max = $PropMax;
		$Value = $PropDefault;
		$this->$CodeGen = $PropCodeGen;
	}
	override Function GetDefault($Object)
	{
		return $Value;
	}
	override Function GetProp($Object)
	{
		return $Value;
	}
	override Function SetProp($Object, $vv)
	{
		my $v = InputBoxEx('Text', 'Enter text here', join(Lines($Value), @CRLF));
		if($v === null)
			return null;
		if($Validation !== null)
		{
			if(!RegexMatch($v, $Validation))
				return new PropVerificationError();
		}
		$Value = $v;
		return $v;
	}
	override Function LoadProp($Object, $v)
	{
		$Value = $v;
	}
	override Function SaveProp($Object)
	{
		return (string)GetProp($Object);
	}
	override Function CodeGen($Window, $Object, $ObjName)
	{
		if($CodeGen !== null && !$CodeGen)
			return;
		my $Code = '';
		my $v = MakeChar(GetProp($Object));
		$Code .= "GUISetProp(\$$ObjName, '$Name', $v);\r\n";
		return $Code;
	}
};