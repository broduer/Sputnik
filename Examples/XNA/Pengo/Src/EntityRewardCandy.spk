Class EntityRewardCandy extends EntityReward
{
	Static $UniqueID = 0;
	Function __Construct(EngineMain $Engine, $EName, $X, $Y)
	{
		parent::EntityReward::__construct($Engine, $EName, $X, $Y);
		$ID = EntityType->$Candy;
		$ParentID = EntityType->$Reward;
		$Size = $Engine->$Map->$MapTileSize;
		$Tex = XNAPng('./Images/Entities/Candy/Candy.png');
		$DeathCounter = 50; // Full cycle
		$RewardValue = 25;
		$NoClip = true;
		SetFalling();
	}
	Function __Destruct()
	{
		Dispose();
	}
	Function Dispose()
	{
		if($Disposed)
			return;
		$Disposed = true;
	}
	Function DoUpdate( )
	{
		if($Disposed)
			return;
		my $V = $Game->$Map->PlayerAt(GetPosition());
		if($V)
		@{
			// Spawn a Points entity
			SpwanPoints();
			// Add score to player
			$V->AddScore($RewardValue);
			// Play Sound
			PlayCollectionSound();
			// Remove this Candy entity
			Dispose();
			return;
		}
		else
			HandleFalling();
	}
};